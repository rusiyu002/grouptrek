<div class="page-header">
    <h3>Username: <%=@user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @user.treks.each do |trek| %>
      <tr>
        <td><%= trek.destination %></td>
        <td><img src="<%= trek.image %>"</td>
        <td>
          <a href="/treks/<%= trek.id %>" class="btn btn-primary">Show</a>
          <a href="/treks/<%= trek.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_trek/<%= trek.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="page-header">
  <h3>Trek #<%= @trek.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Destination</dt>
      <dd><%= @trek.destination %></dd>

      <dt>Start date</dt>
      <dd><%= @trek.start_date %></dd>

      <dt>End date</dt>
      <dd><%= @trek.end_date %></dd>

      <dt>Description</dt>
      <dd><%= @trek.description %></dd>

      <dt>User</dt>
      <dd><%= @trek.user_id %></dd>

      <dt>Image</dt>
      <dd><%= @trek.image %></dd>

      <dt>Days to go</dt>
      <dd><%= @trek.days_to_go %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/treks" class="btn btn-primary">
        Back
      </a>
      <a href="/treks/<%= @trek.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_trek/<%= @trek.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

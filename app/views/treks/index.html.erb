<div class="page-header">
  <h1>
    Treks
    <a href="/treks/new" class="btn btn-lg btn-success">New Trek</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Destination</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Description</th>
        <th>User</th>
        <th>Image</th>
        <th>Days to go</th>
        <th>Actions</th>
      </tr>

      <% @treks.each do |trek| %>
      <tr>
        <td><%= trek.destination %></td>
        <td><%= trek.start_date %></td>
        <td><%= trek.end_date %></td>
        <td><%= trek.description %></td>
        <td><%= trek.user_id %></td>
        <td><%= trek.image %></td>
        <td><%= trek.days_to_go %></td>
        <td>
          <a href="/treks/<%= trek.id %>" class="btn btn-primary">Show</a>
          <a href="/treks/<%= trek.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_trek/<%= trek.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

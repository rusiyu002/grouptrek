<div class="page-header">
  <h1>
    Goings
    <a href="/goings/new" class="btn btn-lg btn-success">New Going</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Trek</th>
        <th>Departure</th>
        <th>Trek leader </th>
        <th>Actions</th>
      </tr>

      <% @goings.each do |going| %>
      <tr>
        <td><%= going.user.username %></td>
        <td><%= going.trek.destination %></td>
        <td><%=going.trek.start_date%>
          <td><%=going.trek.user.username%>
        <td>
          <a href="/goings/<%= going.id %>" class="btn btn-primary">Show</a>
          <a href="/goings/<%= going.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_going/<%= going.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
